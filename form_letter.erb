form_letter = %{
<html>
<head>
	<meta charset='utf-8'>
	<title> Thank You!</title>
</head>
<body>
	<h1>Thanks <%= name %></h1>
	<p>Thanks for coming to our conference. We coudln't have done it without you!</p>

	<p>
		Politcal activism is at the heart of an democracy and your voice needs to be heard.
		Please consider reaching out to your following representatives:
	</p>

	<table>
	<tr><th>Name</th><th>Website</th></tr>
		<% legislators.each do |legislator| %>	
		<tr>
			<td><%= "#{legislator.first_name} #{legislator.last_name}" %></td>
			<td><%= "#{legislator.website}" %></td>
		</tr>
		<% end %>
	</table>
	<!-- If "good number" ask for mobile alerts -->
	<% if !phone_number.nil? %> 
		<p>
			<form>
			<input type="checkbox" name="mobilealerts" value="phone"> Check this box if you would like to recieve mobile alerts.
			</form>
		</p>
	<!-- Else "bad" number and ask for phone number -->	
	<% else %>
		<p>
			<form>
			If you would like to sign up for mobile alerts enter your number.<br>	
			Phone Number: <input type="text" name="phonenumber">
			</form>
		</p>
	<% end %>	  


</body>
</html>
}